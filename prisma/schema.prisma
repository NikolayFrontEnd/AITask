generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id         Int    @id @default(autoincrement())  
  firstName  String  
  lastName   String  
  patronymic String? 
  email      String  @unique 
  password   String  
  money      Int  
  role       String   @default("regular") 
}

model Model {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  tokenRate Int    
  createdAt DateTime @default(now())
}